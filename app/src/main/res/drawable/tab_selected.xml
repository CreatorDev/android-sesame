<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_background" />
        </shape>
    </item>

    <item android:top="-7dp" android:bottom="3dp" android:left="-7dp" android:right="-7dp">
        <shape
            android:shape="rectangle">
            <padding android:left="10dp"
                     android:top="15dp"
                     android:right="10dp"
                     android:bottom="15dp" />
            <stroke android:width="4dp" android:color="@color/supporting_color_light_purple" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>
